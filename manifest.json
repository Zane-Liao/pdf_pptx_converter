{
  "manifest_version": 3,
  "name": "PDF & PPTX Converter",
  "version": "1.0",
  "description": "Convert PDF files to PPTX and vice versa directly from your browser.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "PDF & PPTX Converter"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  }
}